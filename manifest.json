{
  "manifest_version": 3,
  "name": "Gemini API Chrome Extension",
  "version": "1.0",
  "description": "A Chrome extension to interact with Gemini API",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "geolocation"
  ],
  "host_permissions": [
    "https://api.openweathermap.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Gemini API Extension"
  }
}
